---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='E-Commerce made with Astro' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='favicon.jpeg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <ViewTransitions />
  <body class='relative'>
    <Header />
    <slot />
  </body>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Space+Grotesk:wght@300..700&display=swap');

    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

    html,
    body {
      color-scheme: light;
      max-width: 100vw;
      overflow-x: hidden;
      text-rendering: optimizeLegibility;
      font-family: 'Nunito', 'Montserrat', 'Poppins';
    }
  </style>

</html>
